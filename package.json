{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm:datasource": "ts-node -r tsconfig-paths/register ormconfig.ts",
    "typeorm:migration:generate": "npm run build && node --enable-source-maps -r ts-node/register -r tsconfig-paths/register -e \"require('./ormconfig.ts').default.runMigrations\"",
    "migration:generate": "npm run build && ts-node -r tsconfig-paths/register -e \"require('./ormconfig.ts').default.showMigrations\"",
    "migration:run": "npm run build && ts-node -r tsconfig-paths/register -e \"require('./ormconfig.ts').default.runMigrations()\"",
    "migration:revert": "npm run build && ts-node -r tsconfig-paths/register -e \"require('./ormconfig.ts').default.undoLastMigration()\"",
    "setup:practice": "ts-node -r tsconfig-paths/register src/scripts/setup-practice-data.ts",
    "test:practice-api": "ts-node -r tsconfig-paths/register src/scripts/test-practice-api.ts",
    "quick-test": "ts-node -r tsconfig-paths/register src/scripts/quick-test.ts",
    "seed:full": "ts-node -r tsconfig-paths/register src/scripts/run-full-seed.ts",
    "test:full-api": "ts-node -r tsconfig-paths/register src/scripts/test-full-api.ts",
    "seed:complete": "ts-node -r tsconfig-paths/register src/scripts/seed-complete-lesson.ts",
    "seed:git-engine": "ts-node -r tsconfig-paths/register src/scripts/seed-git-engine-lesson.ts",
    "test:goal": "ts-node -r tsconfig-paths/register src/scripts/test-goal-feature.ts",
    "test:complete": "ts-node -r tsconfig-paths/register src/scripts/test-complete-system.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/multer": "^2.0.0",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "docx": "^9.5.1",
    "dompurify": "^3.3.0",
    "file-type": "^21.0.0",
    "joi": "^17.13.3",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.296",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "textract": "^2.5.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
